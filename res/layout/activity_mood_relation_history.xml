<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
     <TextView
        android:id="@+id/mood_relation_history_top_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="9dp"
        android:layout_gravity="center"
        android:text="@string/amount_of_drinks"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <LinearLayout
        android:id="@+id/mood_relation_history_top_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/light_blue"
        style="?android:attr/buttonBarStyle" >
        

        <Button
            android:id="@+id/mood_relation_history_top_button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"
            style="?android:attr/borderlessButtonStyle" />

        <Button
            android:id="@+id/mood_relation_history_top_button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1"
            style="?android:attr/borderlessButtonStyle" />

        <Button
            android:id="@+id/mood_relation_history_top_button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2-3"
            style="?android:attr/borderlessButtonStyle" />

        <Button
            android:id="@+id/mood_relation_history_top_button4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="4+"
            style="?android:attr/borderlessButtonStyle" />
        
    </LinearLayout>

    <FrameLayout
        android:id="@+id/mood_relation_history_content"
        android:layout_marginTop="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >     
	    <ImageView
	        android:id="@+id/mood_relation_history_main_image"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:src="@drawable/temp_emoticon" />
	    
    </FrameLayout>
    
    <TextView
        android:id="@+id/mood_relation_history_average_mood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge" />

   

</LinearLayout>
