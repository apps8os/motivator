<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:actionDropDownStyle">@style/MyActionBarSpinnerStyle</item>
    </style>
    
     <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/action_bar_green</item>
        <item name="android:subtitleTextStyle">@style/MyTheme.ActionBar.Subtitle</item>
        <item name="android:titleTextStyle">@style/MyTheme.ActionBar.Title</item>
    </style>
    
    <style name="MyActionBarSpinnerStyle" parent="@android:style/Widget.Holo.Spinner">
    	<item name="android:background">@drawable/spinner_bg_statelist</item>
	</style>
    
    <style name="MyTheme.ActionBar.Subtitle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Subtitle.Inverse">
    	<item name="android:textColor">#FFFFFF</item>
	</style>
	
    <style name="MyTheme.ActionBar.Title" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title.Inverse">
    	<item name="android:textColor">#FFFFFF</item>
    	<item name="android:textStyle">bold</item>
	</style>
    
    <style name="LoadingBackground" parent="android:Theme">
	    <item name="android:layout_width">fill_parent</item>    
	    <item name="android:layout_height">fill_parent</item>
	    <item name="android:background">@color/light_gray</item>    
	    <item name="android:gravity">center</item>  
	</style>
	<style name="LoadingIndicator" parent="@android:style/Widget.ProgressBar.Large">
	    <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:indeterminate">true</item>
	</style>
	
	<style name="LinearBackground">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:background">@color/light_gray</item>
	    <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
	    <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
	    <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
	    <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
	</style>
	
	<style name="ScrollViewBackground">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">match_parent</item>
	    <item name="android:background">@color/light_gray</item>
	    <item name="android:fillViewport">true</item>
	</style>
	
	<style name="CardButtonLinearLayout">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">80dp</item>
	    <item name="android:background">@drawable/card_button_background</item>
	    <item name="android:clickable">true</item>
	    <item name="android:paddingBottom">3dp</item>
	    <item name="android:layout_marginTop">@dimen/activity_inner_vertical_margin</item>
	</style>
	
	<style name="CardSeparatorTitle">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:layout_marginTop">8dp</item>
	    <item name="android:gravity">center</item>
	    <item name="android:textColor">@color/medium_gray</item>
	    <item name="android:textAllCaps">true</item>
	    <item name="android:textSize">14sp</item>
	    <item name="android:textStyle">bold</item>
	</style>
	
	<style name="ShowcaseView">
        <item name="sv_titleTextAppearance">@style/TextAppearance.ShowcaseView.Title</item>
        <item name="sv_detailTextAppearance">@style/TextAppearance.ShowcaseView.Detail.Light</item>
        <item name="sv_backgroundColor">#e6ecfaff</item>
        <item name="sv_buttonText">@string/ok</item>
    </style>
    
	<style name="TextAppearance.ShowcaseView.Title" parent="android:style/TextAppearance.Large">
        <item name="android:textColor">#33B5E5</item>
        <item name="android:textStyle">bold</item>
    </style>
    
	<style name="EventTextView">
	    <item name="android:textColor">@color/medium_gray</item>
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:gravity">center</item>
	</style>
	
	<style name="EventTitleView" parent="EventTextView">
	    <item name="android:textSize">20sp</item>
	    <item name="android:textStyle">bold</item>
	</style>
	
	<style name="EventEntryTextView" parent="EventTextView">
	    <item name="android:textSize">16sp</item>
	</style>
	
	<style name="EventQuestionLayout">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:layout_marginTop">14dp</item>
	    <item name="android:layout_marginBottom">12dp</item>
	    <item name="android:layout_marginLeft">8dp</item>
	    <item name="android:layout_marginRight">8dp</item>
	    <item name="android:orientation">vertical</item>
	</style>

</resources>
